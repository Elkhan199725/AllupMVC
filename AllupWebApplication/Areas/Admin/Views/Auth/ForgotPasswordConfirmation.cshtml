@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = null;
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Forgot Password Confirmation</h2>
                    <p class="text-center">If your email address is registered in our system, you will receive a password reset link shortly. Please check your email (including your spam folder) for the link to reset your password.</p>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">Back to Login</a>
            </div>
        </div>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
