@model ForgotPasswordViewModel

@{
    Layout = null;
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Forgot Password</h2>
                    <p class="text-center">Enter your email address below, and we'll email you instructions for setting a new one.</p>
                    <!-- Ensure the form posts to the correct area and controller -->
                    <form asp-area="Admin" asp-controller="Auth" asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <!-- Utilize the ASP.NET Core tag helper for the email input -->
                            <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                            <!-- Display validation message for the Email field -->
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <!-- Correct the back to login link to use the URL action helper -->
                <a href="@Url.Action("Login", "Auth", new { Area = "Admin" })">Back to login</a>
            </div>
        </div>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
